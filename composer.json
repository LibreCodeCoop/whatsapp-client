{
    "require": {
        "symfony/panther": "^0.7.1",
        "monolog/monolog": "^2.1",
        "irazasyed/telegram-bot-sdk": "^3.1",
        "vlucas/phpdotenv": "^5.1"
    },
    "require-dev": {
        "symfony/console": "^5.1",
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^9",
        "php-coveralls/php-coveralls": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "WhatsappClient\\": "src"
        }
    },
    "scripts" : {
        "phpcs" : "phpcs --standard=PSR12 -n src",
        "phpcbf" : "phpcbf --standard=PSR12 -n src"
    }
}
